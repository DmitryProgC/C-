using System;
namespace arbus
{
    class Program
    {
        static void Main(string[] args)
        {
            int w = Convert.ToInt32(Console.ReadLine());
 
            if (w % 2 == 0 && w / 2 !=1)
            {
                Console.Write("Yes");
            }
            else
            {
                Console.Write("No");
            }
 
        }
    }
}
